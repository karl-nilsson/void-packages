# Template file for 'gcmc'
pkgname=gcmc
version=1.8.3
revision=1
build_style=gnu-configure
hostmakedepends="automake libtool"
short_desc="G-Code Meta Compiler"
maintainer="Karl Nilsson <karl.robert.nilsson@gmail.com>"
license="GPL-3.0-or-later"
homepage="https://www.vagrearg.org/content/gcmc"
distfiles="https://www.vagrearg.org/gcmc/gcmc-${version}.tar.gz"
checksum=89c817cd30e032a059d5644de42705179fb555d7848655c3816e567d351099de

pre_configure() {
	autoreconf -fi
}

gcmc-doc_package() {
    depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - documentation"
	pkg_install() {
        vdoc /doc/*
	}

}

gcmc-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
#	pkg_install() {
